.fieldset
  = form_tag root_path do
    = label_tag :name
    = text_field_tag "business[name]"
    = label_tag :address
    = text_field_tag "business[address]"
    = label_tag :city
    = text_field_tag "business[city]"
    = label_tag :state
    = text_field_tag "business[state]"
    = label_tag :zip
    = text_field_tag "business[zip]"
    = label_tag :phone
    = text_field_tag "business[phone]"

    %p
      = submit_tag :submit
- if @place && @comparison_result
  / = params["business"]
  / %br
  / = params["business"].values.join(' ')
  %table 
    %thead
      %tr
        %th field name 
        %th does it match 
    %tbody 
      %tr
        %td= @place.name 
        %td N/A
      %tr
        %td= @place.formatted_address
        
        - result = "street_number: #{@comparison_result[:street_number]} - street address: #{@comparison_result[:street_address]} "

        %td= result
      %tr 
        %td= @place.city
        %td= @comparison_result[:city]
   
      %tr
        %td= @place.region
        %td= @comparison_result[:state]
     
      %tr
        %td= @place.postal_code
        %td= @comparison_result[:postal_code]
  
      %tr
        %td= @place.formatted_phone_number
        %td= @comparison_result[:phone]
  
   

  .div.reviews
    - @place.reviews.each do |review|
      = render "review", review: review
